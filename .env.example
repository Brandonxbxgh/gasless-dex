# 0x API - Get your key at https://dashboard.0x.org
NEXT_PUBLIC_ZERO_EX_API_KEY=your_0x_api_key_here

# Alchemy RPC URLs - Free tier at https://www.alchemy.com/
# Base Mainnet
NEXT_PUBLIC_ALCHEMY_BASE_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Arbitrum One
NEXT_PUBLIC_ALCHEMY_ARBITRUM_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Polygon
NEXT_PUBLIC_ALCHEMY_POLYGON_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# BNB Chain (BSC)
NEXT_PUBLIC_ALCHEMY_BNB_URL=https://bnb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Ethereum Mainnet
NEXT_PUBLIC_ALCHEMY_ETH_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Your fee recipient address (0.12% same-chain, 0.15% cross-chain)
NEXT_PUBLIC_SWAP_FEE_RECIPIENT=0xYourWalletAddressForFees

# Etherscan API - for cross-device transaction history (free at https://etherscan.io/apis)
# Same key works for Basescan, Arbiscan, Bscscan, Polygonscan
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Solana RPC - optional, defaults to public endpoint. Use Helius/QuickNode for better performance
NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com
